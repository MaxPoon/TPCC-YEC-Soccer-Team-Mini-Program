<!--pages/me/me.wxml-->
<view class="container">


  <view class="userinfo">   <!-- avatar and username -->
    <image  class="userinfo-avatar" src="{{personal.avatarUrl}}" mode="cover"></image>
    <text class="userinfo-nickname">{{personal.nickName}}</text>
  </view>


  <view class="body">   <!-- info -->
    <view class="info">   <!-- Chinese name -->
      <text>Chinese name</text>
      <view class="infoInput">
        <input placeholder='Tap here to enter' value='{{personal.data.ChineseName}}' bindinput='chineseNameInput'/>
      </view>
    </view>

    <view class="info">   <!-- English name -->
      <text>English name</text>
      <view class="infoInput">
        <input placeholder='Tap here to enter' value='{{personal.data.EnglishName}}' bindinput='englishNameInput' />
      </view>
    </view>

    <view class="info">   <!-- phone -->
      <text>Mobile number</text>
      <view class="infoInput">
         <input placeholder='Tap here to enter' value='{{personal.data.MobileNumber}}' bindinput='phoneInput' type='number'/>
      </view>
    </view>

    <view class="info">   <!-- email -->
      <text>E-mail</text>
      <view class="infoInput">
        <input placeholder='Tap here to enter' value='{{personal.data.EmailAddress}}' bindinput='emailInput' />
      </view>
    </view>


    <view>
      <button disabled='{{btnDisable}}' bindtap='infoSaveClick'>save</button>
    </view>
  </view>

</view> 
